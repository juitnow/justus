{
  "compilerOptions": {
    "lib": [ "es2022" ],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node16",
    "types": [ "node" ],
    "esModuleInterop": true,

    "noEmit": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "./src",
    "./build.ts",
  ],
}
