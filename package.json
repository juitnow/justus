{
  "name": "justus",
  "version": "0.1.2",
  "description": "A JavaScript validation library, with types!",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dts-generator": {
      "import": "./dist/dts-generator.mjs",
      "require": "./dist/dts-generator.js"
    }
  },
  "types": "./index.d.ts",
  "scripts": {
    "build": "./build.sh",
    "dev": "nodemon -e ts -x ./build.sh -w src -w test -w test-d",
    "lint": "eslint src test test-d",
    "prepare": "patch -N -p0 -i .nyc.patch || true"
  },
  "author": "Juit Developers <developers@juit.com>",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.34.4",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "~16.18.12",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "chai": "^4.3.7",
    "esbuild": "^0.17.8",
    "eslint": "^8.34.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "tsd": "^0.25.0",
    "typescript": "^4.9.5"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juitnow/justus.git"
  },
  "keywords": [
    "validation",
    "typescript",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/juitnow/justus/issues"
  },
  "homepage": "https://github.com/juitnow/justus#readme"
}
