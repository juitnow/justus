{
  "name": "justus",
  "version": "0.0.2",
  "description": "A JavaScript validation library, with types!",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dts-generator": {
      "require": "./dist/dts-generator.js"
    }
  },
  "types": "./index.d.ts",
  "scripts": {
    "build": "build.sh",
    "dev": "nodemon -e ts -x build.sh -w src -w test -w test-d",
    "lint": "eslint src test test-d",
    "prepare": "patch -N -p0 -i .nyc.patch || true"
  },
  "author": "Juit Developers <developers@juit.com>",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.18.20",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "esbuild": "^0.14.1",
    "eslint": "^8.3.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "tsd": "^0.19.0",
    "typescript": "^4.5.2"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juitnow/justus.git"
  },
  "keywords": [
    "validation",
    "typescript",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/juitnow/justus/issues"
  },
  "homepage": "https://github.com/juitnow/justus#readme"
}
