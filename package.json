{
  "name": "justus",
  "version": "0.0.0-alpha.0",
  "description": "A JavaScript validation library, with types!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run compile && npm run test",
    "compile": "rm -rf build dist ; ./node_modules/.bin/tsc ; cp -R build/src dist",
    "prepare": "patch -N -p0 -i .nyc.patch",
    "test": "NODE_OPTIONS='--enable-source-maps' nyc --reporter=html --reporter=text mocha 'build/test/**/*.js'"
  },
  "author": "Juit Developers <developers@juit.com>",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.18.19",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "tsd": "^0.18.0",
    "typescript": "^4.4.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juitnow/justus.git"
  },
  "keywords": [
    "validation",
    "typescript",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/juitnow/justus/issues"
  },
  "homepage": "https://github.com/juitnow/justus#readme"
}
